<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#b704c9b4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnpgl"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-33dp"
        android:text="Hai semua ini project pertamaku belajar intent"
        android:textAlignment="center"
        android:textColor="#590405"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnpgl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="45dp"
        android:background="#02584c"
        android:onClick="panggil"
        android:text="CALL"
        tools:background="@drawable/buttonstyle"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnbuka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnpgl"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:background="#028678"
        android:onClick="buka"
        android:text="BROWSER"
        tools:background="@drawable/buttonstyle"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnalamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnbuka"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="#02584c"
        android:onClick="alamat"
        android:text="@string/alamat"
        android:textColor="#ffffff"
        android:typeface="normal"
        tools:background="@drawable/buttonstyle" />

    <EditText
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#f8eff8f3"
        android:hint="Nama "
        android:layout_marginTop="10dp"

        android:layout_below="@+id/btnalamat"
        android:padding="14dp" />
    <EditText
        android:id="@+id/email"
        android:layout_below="@+id/btnalamat"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/name"
        android:background="#f8eff8f3"
        android:hint="Alamat "
        android:layout_marginTop="10dp"
        android:padding="14dp" />

    <TextView
        android:id="@+id/lblComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="275dp"
        android:padding="10dp"
        android:text="Komentar"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/txtComments"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/lblComments"
        android:layout_alignLeft="@+id/lblComments"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:background="#3222"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtComments"
        android:layout_alignRight="@+id/txtComments"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:background="#f124"
        android:text="Simpan"
        android:textColor="#ffffff"
        tools:background="@drawable/buttonstyle"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnSave"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="#ff33"
        tools:background="@drawable/buttonstyle"
        android:text="Hapus"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</RelativeLayout>